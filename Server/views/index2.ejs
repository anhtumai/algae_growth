<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div>
		<% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
	</div>
	<div>
		<form onsubmit="return validate();" action="/bio/new_ph" id="my-form" method="POST">
			<p>Calibration PH: </p>
      <div>
        <input type="checkbox" onClick="unCheck1()" id="low" name="low">
        <label>Low calibration with 4Ph</label>
      </div>
      <div>
        <input type="checkbox" onClick="unCheck2()" id="medium" name="medium">
        <label>Medium calibration with 7Ph</label>
      </div>
      <div>
        <input type="checkbox" onClick="unCheck3()" id="high" name="high">
        <label>High calibration with 10Ph</label>
      </div>
			<input type="submit" value="Submit">
		</form>
	</div>
</body>
<script src="socket.io/socket.io.js" type='text/javascript'></script>
<script type="text/javascript">
var temperature = document.getElementById("temperature");
var form        = document.getElementById("my-form");
var low    = document.getElementById("low"),
    medium = document.getElementById('medium'),
    high   = document.getElementById('high');
function unCheck1() {
  if (low.checked == true){
    medium.checked = false;
    high.checked   = false;
  }
}
function unCheck2() {
  if (medium.checked == true){
    low.checked = false;
    high.checked   = false;
  }
}
function unCheck3() {
  if (high.checked == true){
    medium.checked = false;
    low.checked   = false;
  }
}
function validate(){
if(low.checked==false && medium.checked==false && high.checked== false){
  alert("You haven't filled in anything");
  return false;
};
};

</script>
</html>
